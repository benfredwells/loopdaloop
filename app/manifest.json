{
  "name": "LoopDaLoop",
  "description": "HTML5 synthesizer",
  "version": "0.2.1",
  "minimum_chrome_version": "23",
  "app": {
    "background": {
      "scripts": [
        "instrument/audioConstants.js",
        "instrument/chromaticScale.js",
        "instrument/setting.js",
        "instrument/instrumentState.js",
        "instrument/scene.js",
        "instrument/playedNote.js",
        "instrument/oscillator.js",
        "instrument/contour.js",
        "instrument/instrument.js",
        "background.js"
      ]
    }
  },
  "permissions": [
    "storage",
    {"fileSystem": ["write"]}
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png"
  }
}